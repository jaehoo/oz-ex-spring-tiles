<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
    <definition name="abstract-tile" template="/WEB-INF/jsp/templates/layout.jsp">
        <put-attribute name="title" value="Spring MVC 3 - Tiles 2"/>
        <put-attribute name="header" value="/WEB-INF/jsp/common/header.jsp"/>
        <put-attribute name="body" value=""/>
        <put-attribute name="footer" value="/WEB-INF/jsp/common/footer.jsp"/>
    </definition>

    <definition name="welcomeView" extends="abstract-tile">
        <put-attribute name="body" value="/WEB-INF/jsp/welcome.jsp"/>
    </definition>

    <definition name="helloView" extends="abstract-tile">
        <put-attribute name="body" value="/WEB-INF/jsp/hello.jsp"/>
    </definition>


